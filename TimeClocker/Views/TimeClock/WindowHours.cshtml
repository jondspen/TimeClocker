@model TimeClocker.Models.HoursForWindow

@{
    ViewBag.Title = "WindowHours";
}

<h2>WindowHours</h2>

<div name="SelectStartAndSpan">
    @using (Html.BeginForm("WindowHours", "TimeClock", FormMethod.Post))
    {
        <b>First Day of Period:  </b> @Html.TextBoxFor(model => model.StartDate, "{0:yyyy/MM/dd}");
        <br /><br />
        <b>Period Windows (days):  </b> @Html.TextBoxFor(model => model.DaySpan);
        <br /><br />
        <input type="submit" value="Get Hours for Period" class="btn btn-default" />
    }
</div>

<div name="ListItems">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClockTimeList[0].ClockTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClockTimeList[0].IsClockIn)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ClockTimeList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClockTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsClockIn)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
